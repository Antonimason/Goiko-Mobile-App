<?xml version="1.0" encoding="utf-8"?>
<!-- The root layout of the XML file -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OffersController">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#343434"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Title TextView -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GOIKO"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="16dp" />

    </LinearLayout>

    <!-- Container for the shopping list -->
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/totalcontainer"
        app:layout_constraintVertical_bias="0.5"
        android:gravity="center">

        <!-- ListView to display shopping items -->
        <ListView
            android:id="@+id/shoppingList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <!-- Container for total price and order button -->
    <LinearLayout
        android:id="@+id/totalcontainer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:layout_constraintBottom_toTopOf="@id/menu"
        app:layout_constraintVertical_bias="0.5"
        android:gravity="center">

        <!-- TextView to display total price -->
        <TextView
            android:id="@+id/totalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Total: â‚¬0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center" />

        <!-- Button to place an order -->
        <Button
            android:id="@+id/orderButton"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Order"
            android:background="#FF6200EE"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Bottom Menu Section -->
    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#343434"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Home button -->
        <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:width="90dp"
            android:textSize="9sp"
            android:text="Home" />

        <!-- Products button -->
        <Button
            android:id="@+id/products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Products"
            android:textSize="9sp"
            android:width="90dp"
            android:layout_margin="2dp" />

        <!-- Offers button -->
        <Button
            android:id="@+id/offers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offers"
            android:textSize="9sp"
            android:width="90dp"
            android:layout_margin="2dp" />

        <!-- Feedback button -->
        <Button
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:width="90dp"
            android:textSize="9sp"
            android:text="Feedback" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
